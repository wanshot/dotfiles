[ui]
username = wan

[extensions]
color =
graphlog =
shelve=
pager =
transplant=
purge =

[pager]
pager = LESS='-R' less

[pager]
quiet = True
attend = help, diff, log, glog

[alias]
bn = log --template '{branch}\n'

[color]
mode = ansi

[hooks]
update = find . -name '*.pyc' -delete

[revsetalias]
p($1) = parents(min(branch($1)))

[merge-tools]
splice.executable = vim
splice.args = -f $base $local $other $output -c 'SpliceInit'
splice.premerge = keep
splice.priority = 1
